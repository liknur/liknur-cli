{
  "compilerOptions": {
    "strictNullChecks": true,
    "noImplicitAny": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "target": "ESNext",
    "esModuleInterop": true,
    "strict": true,
    "resolveJsonModule": true,
    "outDir": "dist",
    "rootDir": "src",
    "typeRoots": ["./node_modules/@types", "./types"],
    "lib": [
      "ESNext"
    ],
    "types": [
      "node",
    ],
    "baseUrl": "./"
  },
  "include": ["src/**/*", "types/**/*"],
  "exclude": ["dist/**/*.js", "**/*.test.ts", "**/*.spec.ts", "tests", "__tests__"]
}
